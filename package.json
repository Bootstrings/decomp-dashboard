{
  "name": "decomp-dashboard",
  "version": "1.0.0",
  "description": "A dashboard to help with the Melee decompilation workflow.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "electron-store": "7"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.example.decomp-dashboard",
    "productName": "Decomp Dashboard",
    "files": [
      "**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "win": {
      "icon": "assets/icon.png"
    },
    "mac": {
      "icon": "assets/icon.png"
    },
    "linux": {
      "icon": "assets/icon.png"
    }
  }
